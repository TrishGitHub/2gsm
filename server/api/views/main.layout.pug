doctype html
html(lang="ru")
   head
      meta(charset="utf-8")
      meta(content="ie=edge" http-equiv="x-ua-compatible")
      meta(content="width=device-width, initial-scale=1" name="viewport")

      style.
         input {display: block; width: 100%; max-width: 300px; height: 34px; padding: 6px 12px; font-size: 14px; line-height: 1.42857143; color: #555; background-color: #fff; border-radius: 0; border-color: #ccc; border-width: 0 0 2px 0; border-style: none none solid none; box-shadow: none; outline: none;}
         .btn { max-width: 200px; height: auto; margin: 30px 20px 0 0; padding: 10px 50px; text-transform: uppercase; background-color: #ccf; color: #000; border: 2px solid #ccf; border-radius: 5px; outline: none; cursor: pointer; transition: all 0.25s ease 0s;}
         .btn:hover { background-color: #aeaee0; }
         .btn-group { display: flex; justify-content: flex-start; }

      title #{title}
   body
      .wrapper
         block content
      script(src='/scripts/main.bundle.js')
