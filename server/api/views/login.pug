extends main.layout.pug

block content
   .container.login
      form.form-group#login(action='/login' method="POST")
         h1 Авторизация
         if (msg)
            .status= msg
         label.form__input-line
            input(name="login" type="text" placeholder="login")
         label.form__input-line
            input(name="password" type="password" placeholder="password")
         .btn-group
            input(name="" type="submit" value="Отправить").btn
            input(name="" type="reset" value="Очистить").btn